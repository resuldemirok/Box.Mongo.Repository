<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <PackageId>Box.Mongo.Repository</PackageId>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.1.0</Version>
    <Authors>Resul Demirok</Authors>
    <Company>Resul Co</Company>
    <Description>Lightweight IQueryable provider + Generic repository for MongoDB — EF-like API.</Description>
    <PackageTags>MongoDB;LINQ;IQueryable</PackageTags>
    <RepositoryUrl>https://github.com/resuldemirok/Box.Mongo.Repository</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MongoDB.Driver" Version="3.4.2" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

</Project>
